<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:background="@drawable/crime_login_page"
        tools:layout_editor_absoluteY="-63dp">

        <Button
            android:id="@+id/signup"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="211dp"
            android:layout_height="77dp"
            android:layout_alignBottom="@id/signuptextview"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-93dp"
            android:clickable="true"
            android:fontFamily="@font/butcherman"
            android:text="Sign Up"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="488dp" />

        <Button
            android:id="@+id/forgotpassword"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/passwordedittext"
            android:layout_alignParentRight="true"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="-66dp"
            android:fontFamily="@font/butcherman"
            android:text="Forgot Password ?"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="318dp" />

        <Button
            android:id="@+id/login"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="185dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/forgotpassword"
            android:layout_marginBottom="-56dp"
            android:fontFamily="@font/butcherman"
            android:gravity="center_horizontal"
            android:text="LOGIN"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="17sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="368dp" />

        <EditText
            android:id="@+id/nameedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/nametextview"
            android:layout_alignBottom="@id/logintextview"
            android:layout_marginRight="-257dp"
            android:layout_marginBottom="-72dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="208dp" />

        <EditText
            android:id="@+id/passwordedittext"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/passwordtextview"
            android:layout_alignBottom="@id/nameedit"
            android:layout_marginRight="-257dp"
            android:layout_marginBottom="-66dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="275dp" />

        <TextView
            android:id="@+id/logintextview"
            android:layout_width="189dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="LOGIN"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            app:fontFamily="@font/butcherman"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="137dp" />

        <TextView
            android:id="@+id/nametextview"
            android:layout_width="131dp"
            android:layout_height="43dp"
            android:layout_alignBottom="@id/logintextview"
            android:layout_marginBottom="-72dp"
            android:gravity="center_horizontal"
            android:text="Name :"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:fontFamily="@font/butcherman"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="208dp" />

        <TextView
            android:id="@+id/passwordtextview"
            android:layout_width="131dp"
            android:layout_height="46dp"
            android:layout_alignBottom="@id/nametextview"
            android:layout_marginBottom="-75dp"
            android:gravity="center_horizontal"
            android:text="Password :"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:fontFamily="@font/butcherman"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="275dp" />

        <TextView
            android:id="@+id/signuptextview"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignBottom="@id/forgotpassword"
            android:layout_marginBottom="-131dp"
            android:gravity="center_horizontal"
            android:text="First time user ? Then Sign Up"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:fontFamily="@font/butcherman"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="438dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>