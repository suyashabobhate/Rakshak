<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crime_login_page">

    <Button
        android:id="@+id/report"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="193dp"
        android:layout_height="60dp"
        android:text="Report Crime"
        android:fontFamily="@font/butcherman"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="134dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/missing"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="193dp"
        android:layout_height="60dp"
        android:text="Missing Person"
        android:fontFamily="@font/butcherman"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="261dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/searchcrime"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="193dp"
        android:layout_height="60dp"
        android:text="Search for Crimes"
        android:fontFamily="@font/butcherman"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="114dp"
        tools:layout_editor_absoluteY="388dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>